            <intent-filter>
                <action android:name="com.homelysoft.thenewboston.ABOUT_US" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Preferences"
            android:label="@string/activity_name_preferences" >
